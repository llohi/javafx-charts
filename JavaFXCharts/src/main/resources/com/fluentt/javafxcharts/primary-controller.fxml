<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>

<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" prefHeight="700.0" prefWidth="1200.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fluentt.javafxcharts.PrimaryController">
    <children>
        <Label text="Primary View" />
        <Button fx:id="fetchButton" onAction="#fetchData" text="Fetch Data" />
        <HBox>
            <TableView fx:id="mTable" maxHeight="400.0" maxWidth="600.0">
                <columns>
                    <TableColumn id="mid" fx:id="time" minWidth="200.0" text="Time" />
                    <TableColumn id="task" fx:id="location" minWidth="200.0" text="Location" />
                    <TableColumn id="start" fx:id="parameter_name" minWidth="100" text="Parameter" />
                    <TableColumn id="end" fx:id="parameter_value" maxWidth="70"  text="Value" />
                </columns>
            </TableView>

            <LineChart fx:id="mChart" minHeight="400" maxHeight="400.0" minWidth="500" maxWidth="500.0">
                <xAxis>
                    <CategoryAxis fx:id="xAxis" side="BOTTOM" />
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="yAxis" side="LEFT" />
                </yAxis>
            </LineChart>
        </HBox>

    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
